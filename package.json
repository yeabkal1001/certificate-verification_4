{
  "name": "certificate-verification-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm next dev",
    "build": "pnpm next build",
    "build:analyze": "cross-env ANALYZE=true pnpm next build",
    "analyze": "bash scripts/analyze-bundle.sh",
    "start": "pnpm next start",
    "lint": "pnpm next lint",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate": "pnpm exec prisma migrate deploy",
    "prisma:studio": "pnpm exec prisma studio",
    "prisma:seed": "pnpm exec ts-node --compiler-options {\\"module\\":\\"CommonJS\\"} prisma/seed.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "validate:env": "node scripts/validate-env.js",
    "generate:secrets": "bash scripts/generate-secrets.sh",
    "db:backup": "docker-compose -f docker-compose.backup.yml up --rm db-backup",
    "db:verify": "docker exec -it postgres /scripts/verify.sh",
    "db:schedule": "bash scripts/db-backup/schedule-backups.sh",
    "db:restore": "docker exec -it postgres /scripts/restore.sh",
    "monitor:start": "docker-compose -f docker-compose.monitor.yml up -d",
    "monitor:stop": "docker-compose -f docker-compose.monitor.yml down",
    "monitor:logs": "docker-compose -f docker-compose.monitor.yml logs -f",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    "exporters:start": "docker-compose -f docker-compose.exporters.yml up -d",
    "exporters:stop": "docker-compose -f docker-compose.exporters.yml down",
    "observability:start": "pnpm run monitoring:start && pnpm run exporters:start",
    "observability:stop": "pnpm run monitoring:stop && pnpm run exporters:stop",
    "ssl:setup": "bash scripts/ssl-management/setup-certbot.sh",
    "ssl:renew": "bash scripts/ssl-management/renew-certificates.sh",
    "ssl:monitor": "bash scripts/ssl-management/monitor-certificates.sh",
    "ssl:auto-renewal": "bash scripts/ssl-management/setup-auto-renewal.sh",
    "ssl:self-signed": "bash scripts/ssl-management/generate-self-signed.sh",
    "cache:test": "node scripts/test-caching.js",
    "db:optimize": "node scripts/optimize-database.js",
    "db:test-performance": "node scripts/test-db-performance.js",
    "db:apply-optimizations": "node scripts/apply-db-optimizations.js",
    "test:resources": "bash scripts/test-resource-limits.sh",
    "test": "pnpm exec jest",
    "test:watch": "pnpm exec jest --watch",
    "test:coverage": "pnpm exec jest --coverage",
    "test:integration": "pnpm exec jest --testMatch='**/__tests__/integration/**/*.test.ts'",
    "test:unit": "pnpm exec jest --testMatch='**/__tests__/**/*.test.ts' --testPathIgnorePatterns='**/__tests__/integration/**'",
    "test:ci": "pnpm exec jest --ci --coverage",
    "test:load": "bash scripts/load-testing/run-load-tests.sh",
    "security:scan": "bash scripts/security-scan.sh",
    "prepare": "husky install",
    "prestart": "pnpm run validate:env",
    "prebuild": "pnpm run validate:env",
    "scale:up": "docker-compose up -d --scale app=3",
    "scale:down": "docker-compose down",
    "scale:test": "bash scripts/test-distributed-deployment.sh",
    "scale:logs": "docker-compose logs -f",
    "scale:status": "docker-compose ps",
    "scale:health": "curl -s -k https://localhost/api/instances | json_pp",
    "scale:monitor": "watch -n 5 'curl -s -k https://localhost/api/instances | json_pp'",
    "performance:audit": "node scripts/lighthouse-audit.js",
    "performance:monitor": "node scripts/performance-monitor.js"
  },
